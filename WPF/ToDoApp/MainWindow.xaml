<Window x:Class="ToDoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoApp"
        mc:Ignorable="d"
        Title="To do app" 
        Height="450" 
        Width="300"
        WindowStartupLocation="CenterScreen"
        >
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Activity;"/>
            
            <TextBox x:Name="Input_Activity" Margin="0,0,0,5" KeyUp="Input_Activity_KeyUp" Padding="5"/>
            
            <Button x:Name="Btn_Save" Click="Btn_Save_Click" Content="Save" Padding="5"/>
        </StackPanel>


        <ListView x:Name="LV_Activities" Grid.Row="1" Margin="0,15,0,0">
            
            
            
        </ListView>




    </Grid>
    
</Window>
